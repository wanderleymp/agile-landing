# Cloudflare Pages redirects for Next.js Static Export

# Redirect common bot/spam paths
/wp-admin/* / 301
/admin/* / 301
/wp-login.php / 301
/wp-content/* / 301

# Security redirects
/.env / 301
/.git/* / 301
/.well-known/* / 301

# Handle Next.js routing
/api/* /404.html 404
/_next/* /404.html 404

# Main fallback for SPA routing
/* /index.html 200